 <h1 class="text-center mt-4">Log in </h1>
 
 <div class="container">
    
    <div class="input-group justify-content-center">
      <div class="col-10">
        <%= form_with(scope: :session, url: login_path, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |form| %>
      
        <div class=" input-group mb-3 ">
          <%= form.label :email, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= form.text_field :email, class:"form-control shadow rounded", placeholder: "Enter your email address" %>
          </div>
        </div>
        
          <div class=" input-group mb-3 ">
          <%= form.label :password, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= form.password_field :password, class:"form-control shadow rounded", placeholder: "Enter your password" %>
          </div>
        </div>
      
        <div class="input-group mb-3 justify-content-center">
          <%= form.submit "Log in", class: "btn btn-outline-light btn-lg" %>
        </div>
        <% end %>
      </div>
      <div class="mb-3">
        <%= link_to '[ Cancel and return to articles ligting ]', articles_path, class: "text-info" %>
      </div>
    </div>
</div>

